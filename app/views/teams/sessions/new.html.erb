<%= form_with model: @team, url: team_session_path, class: 'team-registration-main', local: true do |f| %>
<div class='team-form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      チームログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">チームID</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :team_cord, class:"input-default", id:"team-cord", placeholder:"6文字以上の半角英数字", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>