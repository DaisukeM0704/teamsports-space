<%= form_with model: @team, url: team_registration_path, class: 'team-registration-main', local: true do |f| %>
<div class='team-form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規チーム登録
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">チーム画像</label>
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
      <%= f.file_field :image %>
      <p>
        ＊クリックしてファイルをアップロード
      </p>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">チーム名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :team_name, class:"input-default", placeholder:"例) FCバルセロナ", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">代表者名(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :representative_last_name, class:"input-name", placeholder:"例) 山田" %>
      <%= f.text_area :representative_first_name, class:"input-name", placeholder:"例) 太郎" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">代表者名カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :representative_last_name_kana, class:"input-name", placeholder:"例) ヤマダ" %>
      <%= f.text_area :representative_first_name_kana, class:"input-name", placeholder:"例) タロウ" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">競技名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:sports_type_id, SportsType.all, :id, :name, {}, {class:"input-default"}) %>
  </div>

  <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">チーム紹介</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :team_profile, class:"profile-text", id:"team-profile", placeholder:"チーム紹介（最大500文字）" ,rows:"7" ,maxlength:"500" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">チームID</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :team_cord, class:"input-default", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "チーム登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
